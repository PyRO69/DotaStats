<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
	package="com.example.dotastats"
	android:versionCode="1"
	android:versionName="1.0" >

	<uses-sdk
		android:minSdkVersion="9"
		android:targetSdkVersion="17" />
	<uses-permission android:name="android.permission.INTERNET" />
	<uses-permission android:name="android.permission.WIFI" /> 
	<application
		android:allowBackup="true"
		android:largeHeap="true"
		android:icon="@drawable/ic_launcher"
		android:label="@string/app_name"
		android:theme="@style/AppTheme" >
		<activity
			android:name="com.example.dotastats.activities.SplashActivity"
			android:label="@string/app_name" >
			<intent-filter>
				<action android:name="android.intent.action.MAIN" />
				<category android:name="android.intent.category.LAUNCHER" />
			</intent-filter>
		</activity>
		<activity
			android:name="com.example.dotastats.activities.MainActivity"
			android:icon="@drawable/ic_launcher"
			android:label="@string/app_name"
			android:theme="@style/AppTheme" />

		<activity
			android:name="com.example.dotastats.activities.PlayerListSelectionActivity"
			android:icon="@drawable/ic_launcher"
			android:label="Player List"
			android:theme="@style/AppTheme" />

		<activity
			android:name="com.example.dotastats.activities.TabSwitchActivity"
			android:icon="@drawable/ic_launcher"
			android:label="Player"
			android:theme="@style/AppTheme" />

		<activity
			android:name="com.example.dotastats.activities.InfoTabActivity"
			android:icon="@drawable/ic_launcher"
			android:label="Player Info"
			android:theme="@style/AppTheme" />

		<activity
			android:name="com.example.dotastats.activities.MatchTabActivity"
			android:icon="@drawable/ic_launcher"
			android:label="Player Matches"
			android:theme="@style/AppTheme" />

		<activity
			android:name="com.example.dotastats.activities.HeroesTabActivity"
			android:icon="@drawable/ic_launcher"
			android:label="Heroes"
			android:theme="@style/AppTheme" />

		<activity
			android:name="com.example.dotastats.activities.TeamInfoActivity"
			android:icon="@drawable/ic_launcher"
			android:label="Team Info"
			android:theme="@style/AppTheme" />

		<activity
			android:name="com.example.dotastats.activities.RecordsTabActivity"
			android:icon="@drawable/ic_launcher"
			android:label="Player Records"
			android:theme="@style/AppTheme" />

		<service
			android:name="com.example.dotastats.parsing.ParsingService" >
		</service>

	</application>

</manifest>